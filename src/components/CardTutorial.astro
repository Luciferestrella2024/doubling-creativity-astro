---
interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
  category: string;
}

const { title, description, image, link, category } = Astro.props;
---

<article class="card-article">
  <div class="image-container">
    <img src={image} alt="image of art doubling creativity" />
  </div>
  <div class="content">
    <h2 class="card-title">{title}</h2>
    <p class="card-description">{description}</p>
    <p class="category"><span>Category</span>: <strong>{category}</strong></p>
    <a href={link}>I want to learn!</a>
  </div>
</article>

<style>
  .card-article {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 30px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(15px);

    /* border-radius: 1.125rem; */
    .image-container {
      height: 100%;
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    .content {
      padding: 15px;
      display: flex;
      flex-direction: column;
      gap: 15px;
      .card-title {
        font-size: 20px;
        color: #fff;
      }

      .card-description {
        padding-left: 20px;
        color: #c7c8cc;
        font-family: "Varela Round", sans-serif;
      }

      .category {
        color: #9a86a4;
        font-size: 14px;
      }

      a {
        border: 2px solid #2d3250;
        padding: 5px 20px;
        width: fit-content;
        text-align: center;
        align-self: flex-end;
        position: relative;
        color: #f8fae5;
        font-family: "Varela Round", sans-serif;

        &:hover::after {
          width: 100%;
        }

        &::after {
          content: "";
          position: absolute;
          inset: 0;
          width: 0;
          height: 100%;
          background: var(--color-b);
          z-index: -1;
          transition: 0.2s ease-in-out;
        }
      }
    }
  }
</style>
