---
interface Props {
  title: String;
  description: String;
  idImage: String;
}

const { title, description, idImage } = Astro.props;
---

<a
  style=`--bg: url(/img/image-categories-${idImage}.webp);`
  class="bento-item"
  href="#"
>
  <h1 class="title-bento-item">{title}</h1>
  <p class="description-bento-item">{description}</p>
</a>

<style>
  .bento-item {
    background:
      linear-gradient(to top, rgba(0, 0, 0, 0.6) 70%, transparent),
      var(--bg) no-repeat;
    background-size: 100%;
    background-position: center center;
    border-radius: 20px;
    backdrop-filter: blur(20px);
    padding: 20px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    color: #fff;
    text-decoration: none;
    overflow: hidden;
    transition: 0.3s ease-in-out;
    box-shadow: 10px 10px 0 rgba(0, 0, 0, 0.6);

    .title-bento-item {
      font-size: 40px;
    }

    &:hover {
      background-size: 110%;

      transform: translate(10px, 10px);
      .description-bento-item {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .description-bento-item {
      transform: translateY(40px);
      transition: 0.3s ease-in-out;
      opacity: 0;
    }

    &:nth-child(1) {
      grid-column: span 3;
    }
    &:nth-child(3) {
      grid-column: span 2;
    }
    &:nth-child(4) {
      grid-column: span 2;
    }
  }
</style>
