---
interface Props {
  title: string;
  description: string;
  url: string;
  urlImage: string;
}

const { title, url, urlImage } = Astro.props;
---

<article class="article-main" style=`--bg: url(${urlImage});`>
  <a
    class="image-container-article"
    href={url}
    target="_blank"
    rel="noopener noreferer"><span>{title}</span></a
  >
</article>

<style>
  .article-main {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    width: fit-content;
    color: #fff;
    transition: scale 0.5s;

    &:hover {
      scale: 1.1;
    }

    .image-container-article {
      box-shadow: 0.625rem 0.625rem 0 rgba(0, 0, 0, 0.6);
      border-radius: 0.625rem;
      width: 100%;
      height: 25rem;
      background:
        linear-gradient(to top, rgba(0, 0, 0, 0.6) 70%, transparent),
        var(--bg) center/cover;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      text-decoration: none;
      color: #fff;
      font-weight: bold;
    }
  }

  @media screen and (max-width: 1100px) {
    .article-main {
      width: 100%;
    }
  }
</style>
