---
import QuoteIcon from "../icons/QuoteIcon.astro";

interface Props {
  text: string;
  author: string;
  image: string;
}

const { text, author, image } = Astro.props;
---

<section class="quote-main">
  <img
    src="/img/quote.svg"
    alt="quote"
    class="quote-icon q-1"
    style="--rotate: 180deg;"
  />
  <div class="content-quote">
    <p class="text-quote">
      {text}
      <strong>{author}</strong>
    </p>
    <img src={image} alt=`image of ${author}` />
  </div>
  <img src="/img/quote.svg" alt="quote" class="quote-icon q-2" />
</section>

<style>
  .quote-main {
    display: flex;
    flex-direction: column;
    margin-block: var(--margin-between);
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(15px);
    border-radius: 1.125rem;
    padding: 20px;

    .quote-icon {
      width: 9.375rem;
      transform: rotate(var(--rotate, 0deg));
      opacity: 0.5;
      &.q-2 {
        align-self: flex-end;
      }
    }

    .content-quote {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      gap: 30px;
      .text-quote {
        flex: 0.5;
        border-left: 0.25rem solid var(--color-b);
        padding: 0.9375rem;
        font-size: 1.25rem;
        color: #ededed;
        shape-outside: ellipse(8.125rem 8.75rem at 20% 20%);
        text-wrap: pretty;

        strong {
          display: block;
          font-size: 1.875rem;
          display: flex;
          align-items: center;
          margin-top: 1.25rem;
          &::before {
            content: "";
            display: inline-block;
            height: 0.3125rem;
            width: 4.375rem;
            background: #fff;
            margin-right: 0.625rem;
          }
        }
      }

      img {
        width: 350px;
        height: 350px;
        object-fit: cover;
        filter: grayscale(1);
        border-radius: 100%;
      }
    }
  }

  @media screen and (max-width: 1100px) {
    .quote-main {
      .content-quote {
        flex-direction: column;
        text-align: center;

        img {
          width: 250px;
          height: 250px;
        }
      }
    }
  }
</style>
