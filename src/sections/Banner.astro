---
interface Props {
  title: string;
  prhase: string;
  video: string;
}

const { title, video, prhase } = Astro.props;
---

<section class="banner">
  <video src={video} class="banner-video" autoplay loop preload="metadata"
  ></video>
  <h1 class="banner-title">{title}</h1>
  <p class="banner-prhase">{prhase}</p>
</section>

<style>
  .banner {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    color: #fff;
    position: relative;
    margin-block: var(--margin-between);
    padding: 20px 100px;
    height: 300px;
    border-radius: 20px;
    overflow: hidden;

    .banner-title {
      font-size: 3.4375rem;
      text-align: center;
    }
    .banner-prhase {
      font-style: italic;
      text-align: center;
    }
    .banner-video {
      position: absolute;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1;
      mask-image: linear-gradient(to top, rgba(0, 0, 0, 0.5) 70%, transparent);
    }
  }

  @media screen and (width < 1100px) {
    .banner {
      padding: 10px;

      .banner-prhase {
        font-size: 12px;
      }
    }
  }
</style>
