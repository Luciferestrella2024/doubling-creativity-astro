---
import FormRegister from "../components/FormRegister";
import LayoutSingIn from "../layouts/LayoutSing-in.astro";

const redirect = (url: string) => Astro.redirect(url);
---

<LayoutSingIn title="Register" background="/img/bg-image-register.jpg">
  <div class="conatiner-form">
    <FormRegister client:visible />
  </div>
</LayoutSingIn>

<style>
  .conatiner-form {
    --bg: rgba(36, 36, 71, 0.7);
    --color-error: #ef5a6f;
    --color-ok: #9cdba6;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(0.625rem);
    padding: 1.25rem;
    border-radius: 1.25rem;
    width: 100%;
    max-width: 31.25rem;

    form {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 1.875rem;
      flex: 1;
      padding: 1.25rem;

      .title-form {
        color: #fff;
        font-size: 1.875rem;
        text-align: center;
      }

      .containt-input {
        position: relative;
        color: #fff;
        width: 100%;

        .tag-error {
          position: absolute;
          top: -1.125rem;
          right: 0;
          font-size: 0.75rem;
          color: var(--color-error);
          font-style: italic;
          animation: fade-in 0.5s ease-in-out;
        }

        label {
          position: absolute;
          left: 0.625rem;
          top: calc(50% - 1rem);
          transition: 0.1s ease;
          padding: 0 0.3125rem;
          color: rgba(255, 255, 255, 0.7);
          pointer-events: none;
        }
        input {
          border: 0.125rem solid rgba(255, 255, 255, 0.7);
          background: none;
          padding: 0.625rem 0.9375rem;
          border-radius: 0.5rem;
          font-size: 0.9375rem;
          width: 100%;
          outline: none;
          color: #fff;
          &.error {
            border-color: var(--color-error);
          }
          &.ok {
            border-color: var(--color-ok);
          }

          &:not(:placeholder-shown) ~ label,
          &:focus ~ label {
            top: -1.125rem;
            font-size: 0.75rem;
            left: 0.3125rem;
            color: #fff;
          }
        }
      }

      .btn-submit {
        border: none;
        background: var(--color-a);
        color: #fff;
        font-weight: bold;
        font-family: "Poppins", sans-serif;
        padding: 0.625rem;
        font-size: 1.25rem;
        border-radius: 0.5rem;
        cursor: pointer;
        transition: 0.1s ease;
        width: 100%;

        &:hover {
          opacity: 0.7;
          scale: 0.95;
        }
      }
    }
  }

  @keyframes fade-in {
    from {
      transform: translateY(5px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
</style>
